<?xml version="1.0" encoding="UTF-8" ?>

<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="Laboration4" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.example.Artist</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/laboration4"/>
            <property name="javax.persistence.jdbc.user" value="Philippe"/>
            <property name="javax.persistence.jdbc.password" value="Password123"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>